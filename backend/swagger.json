{
    "openapi": "3.0.0",
    "info": {
      "title": "MinIO Dataset Search",
      "description": "",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3000/"
      }
    ],
    "paths": {
      "/datasets": {
        "get": {
          "tags" : ["Search over Dataset names"],
          "summary": "It will return the dataset details of the dataset that matches the name passed in the query.",
          "operationId": "getDataset",
          "parameters" : [
              {
                "name" : "datasetName",
                "in" : "query",
                "descripton" : "Name of the dataset",
                "required" : true,
                "type" : "string"
              }
          ],
          "responses": {
            "200": {
              "description": "OK"
            }
          }
        }
      },
      "/search/{datasetName}": {
        "get": {
          "tags" : ["Search inside Datasets"], 
          "summary": "Search for data in dataset.",
          "operationId": "searchData",
          "parameters" : [
            {
                "name" : "datasetName",
                "in" : "path",
                "descripton" : "Exact name of the dataset to search on.",
                "required" : true,
                "type" : "string"
            },
            {
                "name" : "query",
                "in" : "query",
                "description" : "Query string to search with",
                "required" : true
            },
            {
              "name" : "eq_filters",
              "in" : "query",
              "description" : "Key value pairs separated with '&'. For eg: color=blue&shape=round",
              "type" : "string"
            },
            {
                "name" : "fields",
                "in" : "query",
                "description" : "Comma separated list of fields on which you want to search.",
                "type" : "string"
            },
            {
                "name" : "pagination",
                "in" : "query",
                "description" : "Page to return (expects the page number)",
                "type" : "number",
                "default" : 1
            },
            {
                "name" : "pageSize",
                "in" : "query",
                "description" : "Number of items returned per page.",
                "type" : "number",
                "default" : 10
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "400": {
                "description": "Bad Request"
            },
            "404": {
              "description": "Not Found"
          }
          }
        }
      }
    }
  }
  